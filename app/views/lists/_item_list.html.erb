<h3>Tasks:</h3>
<div>
	<table>
		<tr>
			<th>Done</th>
			<th>Task</th>
			<th>Button</th>
			<th colspan="2"></th>
		</tr>
		<% @list.items.each do |itm| %>
			<tr>
				<td><%= "Y" if itm.done %></td>
				<td><%= itm.name %></td>
				<td>
					<%= link_to "Update", user_list_item_path(@user.id, @list.id, itm.id), method: :put %>
				</td>
			</tr>
		<% end %>
	</table>
</div>
